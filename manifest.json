{
    "manifest_version": 2,
    "name": "Hello NewTab",
    "version": "1.0.0",
    "description": "This extension allows you to quickly access your bookmarks on the new tab.",
    "permissions": [
        "bookmarks",
        "storage",
        "alarms",
        "chrome://favicon/"
    ],
    "incognito": "split",
    "background": {
        "scripts": [
            "js/common.js",
            "js/background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "img/icon_016.png",
        "48": "img/icon_048.png",
        "128": "img/icon_128.png"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "options_page": "option.html"
}