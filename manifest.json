{
    "manifest_version": 2,
    "name": "Hello NewTab",
    "version": "0.1",
    "description": "Startpage giving instant access to bookmarks.",
    "permissions": [
        "bookmarks",
        "tabs",
        "storage",
        "chrome://favicon/"
    ],
    "incognito":"split",
    "background": {
        "scripts": [
            "js/common.js",
            "js/background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "img/icon_016.png",
        "48": "img/icon_048.png",
        "128": "img/icon_128.png"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "options_page": "option.html"
}
